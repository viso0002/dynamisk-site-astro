---
import Layout from "../layouts/Layout.astro";
import run from "../assets/run.jpg";
---

<Layout>
  <h1>WELCOME TO MY SITE</h1>
  <img src={run.src} alt="Mit billede" />
</Layout>

<style>
  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }
  h1 {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: white;
  }
</style>
